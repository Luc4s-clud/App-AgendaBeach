[Unit]
Description=A Beach Arena - API Backend
After=network.target mysql.service

[Service]
Type=simple
User=root
WorkingDirectory=/var/www/abeach/apps/backend
ExecStart=/usr/bin/node src/index.js
Restart=on-failure
RestartSec=5
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
