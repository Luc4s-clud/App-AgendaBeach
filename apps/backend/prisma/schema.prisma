generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum Sport {
  BEACH_TENNIS
  VOLEI
  FUTVOLEI
}

enum CourtType {
  COBERTA
  DESCOBERTA
}

enum BookingStatus {
  ACTIVE
  CANCELED
}

enum PaymentStatus {
  PENDING
  APPROVED
  REJECTED
  EXPIRED
}

enum TournamentStatus {
  UPCOMING
  ONGOING
  FINISHED
  CANCELED
}

enum TournamentLeague {
  GOLD
  SILVER
  BRONZE
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  passwordHash String
  role         Role      @default(USER)
  createdAt    DateTime  @default(now())
  bookings     Booking[]
  pendingPayments PendingPayment[]
  tournamentRegistrations TournamentRegistration[]
}

model Court {
  id              Int              @id @default(autoincrement())
  name            String
  sport           Sport
  type            CourtType        @default(COBERTA)
  pricePerHour    Int              @default(80) /// Valor por hora em reais (R$)
  createdAt       DateTime         @default(now())
  bookings        Booking[]
  pendingPayments PendingPayment[]
}

model Booking {
  id        Int           @id @default(autoincrement())
  userId    Int
  courtId   Int
  sport     Sport         @default(BEACH_TENNIS) /// Esporte para preparar a quadra (Beach Tennis, Vôlei, Futvôlei)
  /// Data do agendamento (somente data, sem horário)
  date      DateTime      @db.Date
  /// Início do horário (somente hora/minuto)
  startTime DateTime      @db.Time(0)
  /// Fim do horário (somente hora/minuto)
  endTime   DateTime      @db.Time(0)
  status    BookingStatus @default(ACTIVE)
  createdAt DateTime      @default(now())

  user  User  @relation(fields: [userId], references: [id])
  court Court @relation(fields: [courtId], references: [id])

  @@index([userId])
  @@index([courtId, date])
  @@unique([courtId, date, startTime], name: "court_date_start_unique")
}

model PendingPayment {
  id             Int           @id @default(autoincrement())
  userId         Int
  courtId        Int
  date           DateTime      @db.Date
  slots          String        /// JSON: ["15:00","21:00"]
  sport          Sport
  totalAmount    Int           /// Valor total em reais
  mpPreferenceId String?       /// ID da preferência no Mercado Pago
  status         PaymentStatus @default(PENDING)
  createdAt      DateTime      @default(now())

  user  User  @relation(fields: [userId], references: [id])
  court Court @relation(fields: [courtId], references: [id])

  @@index([mpPreferenceId])
  @@index([status])
}

model Tournament {
  id          Int              @id @default(autoincrement())
  name        String
  description String?
  sport       Sport
  startDate   DateTime         @db.Date
  endDate     DateTime?        @db.Date
  /// Data limite para inscrições
  registrationEndDate DateTime? @db.Date
  /// Ligas / categorias disponíveis
  hasGold     Boolean          @default(false)
  hasSilver   Boolean          @default(false)
  hasBronze   Boolean          @default(false)
  status      TournamentStatus @default(UPCOMING)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  registrations TournamentRegistration[]
}

model TournamentRegistration {
  id           Int              @id @default(autoincrement())
  userId       Int
  tournamentId Int
  league       TournamentLeague
  createdAt    DateTime         @default(now())

  user       User       @relation(fields: [userId], references: [id])
  tournament Tournament @relation(fields: [tournamentId], references: [id])

  @@index([userId])
  @@index([tournamentId])
  @@unique([userId, tournamentId, league])
}


